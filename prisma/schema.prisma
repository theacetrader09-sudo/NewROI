// This is your Prisma schema file for PRODUCTION (PostgreSQL)
// Switch to this when deploying to Supabase

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("USER") // USER or SUPERADMIN
  verified  Boolean  @default(false)  // Email verification status
  
  balance       Decimal  @default(0) @db.Decimal(18, 2)  // Changed from Float
  referralCode  String   @unique
  uplineId      String?
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  upline    User?  @relation("Referrals", fields: [uplineId], references: [id])
  referrals User[] @relation("Referrals")
  
  investments  Investment[]
  transactions Transaction[]
  roiLogs      RoiLog[]
  otps         OTP[]

  @@index([email])
  @@index([referralCode])
  @@index([uplineId])
}

model Investment {
  id             String   @id @default(cuid())
  userId         String
  amount         Decimal  @db.Decimal(18, 2)
  roiRate        Decimal  @db.Decimal(5, 2)
  status         String   // PENDING, ACTIVE, COMPLETED
  txid           String?  @unique
  approvalMethod String?  // AUTO, MANUAL - tracks how deposit was approved
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  user    User      @relation(fields: [userId], references: [id])
  roiLogs RoiLog[]

  @@index([userId])
  @@index([status])
  @@index([txid])
}

model Transaction {
  id          String   @id @default(cuid())
  userId      String
  type        String   // DEPOSIT, WITHDRAWAL, ROI, COMMISSION, MISSED_ROI
  amount      Decimal  @db.Decimal(18, 2)  // Changed from Float
  
  previousBalance Decimal  @db.Decimal(18, 2)  // Changed from Float
  newBalance      Decimal  @db.Decimal(18, 2)  // Changed from Float
  
  description String
  status      String   // PENDING, COMPLETED, REJECTED
  referenceId String?
  
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id])

  @@index([userId])
  @@index([type])
  @@index([status])
  @@index([createdAt])
}

model RoiLog {
  id           String   @id @default(cuid())
  userId       String
  investmentId String
  amount       Decimal  @db.Decimal(18, 2)  // Changed from Float
  date         String   // YYYY-MM-DD format
  triggerType  String   @default("AUTO") // AUTO or MANUAL
  
  createdAt DateTime @default(now())

  user       User       @relation(fields: [userId], references: [id])
  investment Investment @relation(fields: [investmentId], references: [id])

  @@unique([userId, investmentId, date, triggerType])
  @@index([userId])
  @@index([date])
}

model SystemSettings {
  id        String   @id @default(cuid())
  
  dailyRoiPercent Decimal  @default(1.0) @db.Decimal(5, 2)  // Changed from Float
  levelConfig     String   // JSON array of 10 percentages
  adminWallet     String?
  
  maintenanceMode Boolean @default(false)
  roiHoliday      Boolean @default(false)
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Announcement {
  id          String    @id @default(cuid())
  title       String
  description String?
  imageUrl    String    // Cloudinary URL
  isActive    Boolean   @default(true)
  startDate   DateTime?
  endDate     DateTime?
  
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  
  @@index([isActive])
}

model OTP {
  id        String   @id @default(cuid())
  userId    String
  code      String   // 6-digit OTP code
  type      String   // WITHDRAWAL or SIGNUP
  expiresAt DateTime
  verified  Boolean  @default(false)
  createdAt DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId, type])
  @@index([code])
  @@index([expiresAt])
}
